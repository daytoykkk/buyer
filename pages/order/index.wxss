/* pages/order/index.wxss */
page{ 
    background-color: #f8f8f8;
}
/*交易状态*/
.bk_box{
    position: absolute;
    z-index: 80;
    width: 100%;
    height: 204rpx;
    background-color: #3a4058;
}
.bk_box1{
    position: absolute;
    z-index: 80;
    margin-top: 204rpx;
    width: 100%;
    height: 120rpx;
    background-color: #ffffff;
}
.image_box{
    position: absolute;
    z-index: 100;
    width: 546rpx;
    height: 228rpx;
    margin-left: 102rpx;
    margin-top: 40rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 6rpx 12rpx 0rpx 
		rgba(0, 0, 0, 0.16);
    border-radius: 24rpx;
    overflow: hidden;
}
.image_box image{
    width: 546rpx;
    height: 228rpx;
    border-radius: 24rpx;
} 

/*商品*/
.box{
    clear: both;
    margin-top: 304rpx;
    width: 100%;
    
    padding-left: 32rpx;
    padding-bottom: 16rpx;
    background-color: #ffffff;
}
.title_box{
    width: 91%;
    height: 92rpx;
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
    color: #000000;
    display: flex;
    align-items: center;
}
.title{
    width: 114rpx;
	height: 34rpx;
	background-color: #d4b5b2;
	border-radius: 10rpx;
    opacity: 0.35;
    text-align: center;
	font-family: FZLanTingHei-L-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 34rpx;
	letter-spacing: 0rpx;
    color: #a28482;
    margin-right: 32rpx;
}

/*单件商品*/
.good_item{
    width: 92%;
    height: 160rpx;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}
.img{
    width: 106rpx;
    height: 106rpx;
    margin-left: 32rpx;
    overflow: hidden;
    background-color: #ffffff;
}
.img image{
    width: 106rpx;
    height: 106rpx;
}
.name{
    height: 106rpx;
    width: 370rpx;
    margin-left: 32rpx;
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
    color: #000000;
    overflow : hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
}
.price_number{
    height: 106rpx;
    width: 110rpx;
    margin-left: auto;
    margin-right: 14rpx;
}
.price{
    width: 118rpx;
    font-family: FZLanTingHei-B-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
    color: #6d6d6d;
    text-align: center;
}
.number{
    width: 118rpx;
    font-family: FZLanTingHei-B-GBK;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0rpx;
    color: #6d6d6d;
    text-align: center;
}

/*买家留言*/
.msg{ 
    width: 100%;
    height: 92rpx;
    display: flex;
    align-items: center;
    padding-left: 34rpx;
    background-color: #ffffff;
}
.msg_title{
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0rpx;
	color: #b2b2b2;
}
.msg_content{
    width: 549rpx;
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0rpx;
    color: #000000;
    margin-left: 32rpx;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

/*商品总额*/
.price_quan{
    margin-top: 16rpx;
    width: 750rpx;
	height: 202rpx;
	background-color: #ffffff;
}
.price_box,.quan{
    width: 100%;
    height: 70rpx;
    display: flex;
    align-items: center;
}
.actual{
    width: 100%;
    height: 62rpx;
    display: flex;
    align-items: center;
}
.price_quan_title{
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0rpx;
    color: #000000;
    margin-left: 32rpx;
}
.price_quan_content{
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
    color: #000000;
    margin-left: auto;
    margin-right: 32rpx;
}

/*订单信息*/
.order_box{
    margin-top: 16rpx;
    width: 750rpx;
	height: 150rpx;
	background-color: #ffffff;
}
.order_number,.order_time{
    width: 100%;
    height: 75rpx;
    display: flex;
    align-items: center;
}
.order_title{
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0rpx;
    color: #929090;
    margin-left: 32rpx;
}
.order_content{
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
    color: #929090;
    margin-left: auto;
    margin-right: 32rpx;
}
/*底部工具栏*/
.footer_bool{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
	height: 100rpx;
	background-color: #ffffff;
	box-shadow: 0rpx -2rpx 6rpx 0rpx 
        rgba(0, 0, 0, 0.16);
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.btn{
    width: 164rpx;
	height: 52rpx;
    border-radius: 26rpx;
    font-family: FZLanTingHei-R-GBK;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0rpx;
    color: #ffffff;
    margin-right: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.delete_btn{
    background-color: #3a4058;
}
.confirm_btn{
    background-color: #3a4058;
}
.cancel_btn{
    background-color: #8d8eab;
}